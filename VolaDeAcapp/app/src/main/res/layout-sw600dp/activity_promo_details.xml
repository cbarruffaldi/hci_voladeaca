<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_weight="0.6"
            android:layout_height="0dp">

            <com.synnapps.carouselview.CarouselView
                android:id="@+id/carouselView"
                android:layout_width="match_parent"
                app:fillColor="#FFFFFFFF"
                app:pageColor="#00000000"
                app:radius="4dp"
                app:slideInterval="6000"
                app:strokeColor="@color/white"
                app:strokeWidth="1dp"
                android:layout_height="match_parent" />


        </FrameLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:gravity="center_horizontal">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp">
                <TextView
                    android:text="@string/promo_price_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/promo_price"
                    android:textAlignment="center"
                    android:background="@null"
                    android:textColor="@color/colorAccent"
                    android:textSize="30sp"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="0dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center">

                <TextView
                    android:text="@string/departing_on"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/departure_date_label"
                    android:textSize="24sp"
                    android:paddingStart="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/departure_date"
                    android:textSize="20sp"
                    android:paddingStart="12dp"
                    android:textColor="@color/black"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center">

                <TextView
                    android:text="@string/departure_time_label_promo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/departure_time_label"
                    android:textSize="24sp"
                    android:paddingStart="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/departure_time"
                    android:textSize="20sp"
                    android:paddingStart="12dp"
                    android:textColor="@color/black"
                    android:textAlignment="textStart" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center">

                <TextView
                    android:text="@string/from"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/departure_city_label"
                    android:textSize="24sp"
                    android:paddingStart="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/departure_city"
                    android:textSize="20sp"
                    android:paddingStart="12dp"
                    android:textColor="@color/black" />
            </LinearLayout>

            <Button
                android:text="@string/detalles_del_vuelo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/more_details_btn"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="15dp"
                style="@style/Base.Widget.AppCompat.Button.Colored"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
